@model string
<div class="container mt-5 mb-2">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <div class="card">
                <div class="card-title">
                    <h1 class="fw-bold text-primary text-center">Seznam mých zpráv</h1>
                </div>
                <div class="card-body">
                    <table id="tableMessage" data-pagination="true" data-search="true">
                        <thead>
                            <tr>
                                <th data-sortable="true" data-field="id">ID</th>
                                <th data-sortable="true" data-field="topic">Předmět</th>
                                <th data-sortable="true" data-field="messageText">Text</th>
                                <th data-sortable="true" data-field="fromUserName">Odesílatel</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-md-3">
                <button class="btn btn-danger">
                    <a asp-controller="Message" asp-action="Index" class="text-decoration-none text-white">
                        Zpět
                    </a>
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tableMessage').bootstrapTable({
                url: '/Message/GetAllMyMessages?id=' + '@Model',
                dataField: 'data',
                pagination: true,
                search: true,
                columns: [{
                    field: 'id',
                    title: 'ID'
                }, {
                    field: 'topic',
                    title: 'Předmět'
                }, {
                    field: 'messageText',
                    title: 'Text'
                }, {
                    field: 'fromUserName',
                    title: 'Odesílatel'
                }]
            });
        });
    </script>
}
