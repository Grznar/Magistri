

<div class="container mt-5 mb-2">
	<div class="row">
		<div class="col-md-10 offset-md-1">
			<div class="card">
				<div class="card-title">
					<h1 class="fw-bold text-primary text-center ">Seznam Úkolů</h1>
				</div>
				<div class="card-body">
					<table id="tableHW" data-pagination="true"
						   data-search="true">
						<thead>
							<tr>
								<th data-sortable="true" data-field="id">Id</th>

								<th data-sortable="true" data-field="dueDate">Do kdy</th>
								<th data-sortable="true" data-field="class.shortName">Třída</th>
							</tr>
						</thead>

					</table>
				</div>
			</div>
		</div>
		<div class="row mt-5">
			<div class="col-md-3">
				<button class="btn btn-danger">
					<a asp-controller="Homework" asp-action="IndexTeacher" class="text-decoration-none text-white">
						Zpět
					</a>
				</button>
			</div>
		</div>
	</div>

	@section Scripts {
		@{
			<script src="~/js/hwTable.js"></script>
		}
	}
