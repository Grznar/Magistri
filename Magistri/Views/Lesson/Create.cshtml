@model LessonVM
<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">
                        <h1 class="fw-bold text-primary">Vytvořit Hodinu</h1>
                    </div>
                    <form method="POST">
                        <div asp-validation-summary="ModelOnly"></div>

                        

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Popis</label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- Dropdown pro učitele -->
                        <div class="mb-3">
                            <label asp-for="TeacherId" class="form-label">Učitel</label>
                            <select asp-for="TeacherId" class="form-select" asp-items="Model.TeacherList">
                                <option value="">Vyberte učitele</option>
                            </select>
                            <span asp-validation-for="TeacherId" class="text-danger"></span>
                        </div>

                        <!-- Dropdown pro předmět -->
                        <div class="mb-3">
                            <label asp-for="SubjectId" class="form-label">Předmět</label>
                            <select asp-for="SubjectId" class="form-select" asp-items="Model.SubjectList">
                                <option value="">Vyberte předmět</option>
                            </select>
                            <span asp-validation-for="SubjectId" class="text-danger"></span>
                        </div>

                      

                        <div class="row">
                            <div class="col-md-6">
                                <button type="submit" class="btn btn-primary">Vytvořit</button>
                            </div>
                            <div class="col-md-6 text-end">
                                <a asp-action="Index" class="btn btn-danger">Zpět</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
