<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="" href="/images/logo.png">
    <title>@ViewData["Title"] - Magistri</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Magistri.styles.css" asp-append-version="true" />
</head>
<body>
    @if(User.Identity.IsAuthenticated)
    {
        <header>
            <nav class="navbar cyan navbar-expand-lg fixed-top fw-bold">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Magistři</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse ">
                        <ul class="navbar-nav ms-auto gap-3">
                            <li class="nav-item">
                                <a class="nav-link px-1" asp-area="" asp-controller="Home" asp-action="Index">Domů</a>
                            </li>
                            
                                <li class="nav-item">
                                    <a class="nav-link px-1" asp-area="" asp-controller="Auth" asp-action="Logout">Odhlásit se</a>
                                </li>
                            <li class="nav-item">
                                <a class="nav-link px-1" asp-area="" asp-controller="" asp-action="">@UserManager.GetUserName(User)</a>
                            </li>
                            
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        
    }
    <div class="container ">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    @if (User.Identity.IsAuthenticated)

    {
        <footer class="border-top footer text-muted cyan fw-bold">
            <div class="container text-center">
                &copy; 2025 - Magistři
            </div>
        </footer>
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
